{
  "name": "craft_site_api",
  "description": "Develop part of the API needed for a product page for a craft site",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "nodemon --exec babel-node src/server.js",
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint --ext js",
    "postinstall": "husky install",
    "test-all": "yarn format && yarn check-format && yarn check-lint",
    "format": "prettier --write .",
    "check-lint": "eslint . --ext js",
    "check-format": "prettier --check .",
    "migrate": "npx prisma migrate dev --name init",
    "makemigrations": "npx prisma migrate dev --create-only",
    "pull": "npx prisma db pull",
    "generate": "npx prisma generate",
    "studio": "npx prisma studio",
    "formatSchema": "npx prisma format"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/node": "^7.14.2",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^7.28.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "prisma": "^2.24.1",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "@prisma/client": "^2.24.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7"
  }
}
